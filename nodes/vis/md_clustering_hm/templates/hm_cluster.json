{
  "$schema": "https://vega.github.io/schema/vega/v5.json",
  "autosize": "pad",
  "padding": 5,
  "width": 300,
  "height": 585,
  "style": "cell",
  "title": {
    "anchor": "middle",
    "text": {{ title|tojson|safe }}
  },
  "layout": {
    "columns": 2,
    "padding": {
      "column": -2,
      "row": 15
    }
  },
  "data": [
    {
      "name": "hm_data",
      "values": {{ hm_data|tojson|safe }}
    },
    {
      "name": "data_1",
      "source": "hm_data",
      "transform": [
        {
          "type": "filter",
          "expr": "datum['F1'] !== null && !isNaN(datum['F1'])"
        }
      ]
    },
    {
      "name": "data_2",
      "source": "hm_data",
      "transform": [
        {
          "type": "formula",
          "expr": "datum.F1 == null ? 'NA' : 'NA'",
          "as": "F1_new"
        },
        {
          "type": "filter",
          "expr": "(datum.F1 === null)"
        }
      ]
    },
    {
      "name": "tree_hm1",
      "values": {{ encoding_dendro|tojson|safe }},
      "transform": [
        {
          "type": "stratify",
          "key": "id",
          "parentKey": "parent"
        },
        {
          "type": "tree",
          "method": "cluster",
          "size": [
            {
              "signal": "height"
            },
            {
              "signal": "width - 100"
            }
          ],
          "separation": false,
          "as": [
            "y",
            "x",
            "depth",
            "children"
          ]
        }
      ]
    },
    {
      "name": "links_hm1",
      "source": "tree_hm1",
      "transform": [
        {
          "type": "treelinks"
        },
        {
          "type": "linkpath",
          "orient": "horizontal",
          "shape": "orthogonal"
        }
      ]
    },
    {
      "name": "tree_hm2",
      "values": {{ dataset_dendro|tojson|safe }},
      "transform": [
        {
          "type": "stratify",
          "key": "id",
          "parentKey": "parent"
        },
        {
          "type": "tree",
          "method": "cluster",
          "size": [
            {
              "signal": "height"
            },
            {
              "signal": "width - 100"
            }
          ],
          "separation": false,
          "as": [
            "y",
            "x",
            "depth",
            "children"
          ]
        }
      ]
    },
    {
      "name": "links_hm2",
      "source": "tree_hm2",
      "transform": [
        {
          "type": "treelinks"
        },
        {
          "type": "linkpath",
          "orient": "horizontal",
          "shape": "orthogonal"
        }
      ]
    }
  ],
  "marks": [
    {
      "type": "group",
      "name": "row_dendrogram_hm1",
      "title": {
        "text": "Encoding",
        "orient": "left",
        "fontWeight": "normal",
        "fontSize": 12
      },
      "marks": [
        {
          "type": "path",
          "from": {
            "data": "links_hm1"
          },
          "encode": {
            "update": {
              "scaleY": {"value": {{ dendro_config.encoding.scaleY }}},
              "path": {
                "field": "path"
              },
              "stroke": {
                "value": "#ccc"
              }
            }
          }
        }
      ]
    },
    {
      "type": "group",
      "name": "hm1",
      "marks": [
        {
          "name": "layer_0_marks",
          "type": "rect",
          "style": [
            "rect"
          ],
          "from": {
            "data": "data_1"
          },
          "encode": {
            "update": {
              "fill": {
                "scale": "layer_0_color",
                "field": "F1"
              },
              "tooltip": {
                "signal": "{'Encoding': ''+datum['Encoding'], 'Dataset': ''+datum['Dataset'], 'F1': format(datum['F1'], '')}"
              },
              "x": {
                "scale": "x_hm1",
                "field": "Dataset"
              },
              "width": {
                "scale": "x_hm1",
                "band": true
              },
              "y": {
                "scale": "y_hm1",
                "field": "Encoding"
              },
              "height": {
                "scale": "y_hm1",
                "band": true
              }
            }
          }
        },
        {
          "name": "layer_1_marks",
          "type": "rect",
          "style": [
            "rect"
          ],
          "from": {
            "data": "data_2"
          },
          "encode": {
            "update": {
              "fill": {
                "scale": "layer_1_color",
                "field": "F1_new"
              },
              "x": {
                "scale": "x_hm1",
                "field": "Dataset"
              },
              "width": {
                "value": 13
              },
              "y": {
                "scale": "y_hm1",
                "field": "Encoding"
              },
              "height": {
                "value": 13
              }
            }
          }
        }
      ]
    },
    {
      "type": "group",
      "name": "row_dendrogram_hm2",
      "title": {
        "text": "Dataset",
        "orient": "left",
        "fontWeight": "normal",
        "fontSize": 12
      },
      "marks": [
        {
          "type": "path",
          "from": {
            "data": "links_hm2"
          },
          "encode": {
            "update": {
              "scaleY": {"value": {{ dendro_config.dataset.scaleY }}},
              "path": {
                "field": "path"
              },
              "stroke": {
                "value": "#ccc"
              }
            }
          }
        }
      ]
    },
    {
      "type": "group",
      "name": "hm2",
      "marks": [
        {
          "name": "layer_0_marks",
          "type": "rect",
          "style": [
            "rect"
          ],
          "from": {
            "data": "data_1"
          },
          "encode": {
            "update": {
              "fill": {
                "scale": "layer_0_color",
                "field": "F1"
              },
              "tooltip": {
                "signal": "{'Encoding': ''+datum['Encoding'], 'Dataset': ''+datum['Dataset'], 'F1': format(datum['F1'], '')}"
              },
              "x": {
                "scale": "x_hm2",
                "field": "Encoding"
              },
              "width": {
                "scale": "x_hm2",
                "band": true
              },
              "y": {
                "scale": "y_hm2",
                "field": "Dataset"
              },
              "height": {
                "scale": "y_hm2",
                "band": true
              }
            }
          }
        },
        {
          "name": "layer_1_marks",
          "type": "rect",
          "style": [
            "rect"
          ],
          "from": {
            "data": "data_2"
          },
          "encode": {
            "update": {
              "fill": {
                "scale": "layer_1_color",
                "field": "F1_new"
              },
              "x": {
                "scale": "x_hm2",
                "field": "Encoding"
              },
              "width": {
                "value": 13
              },
              "y": {
                "scale": "y_hm2",
                "field": "Dataset"
              },
              "height": {
                "value": 13
              }
            }
          }
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "x_hm1",
      "type": "band",
      "domain": {
        "fields": [
          {
            "data": "hm_data",
            "field": "Dataset"
          },
          {
            "data": "data_2",
            "field": "Dataset"
          }
        ],
        "sort": false
      },
      "range": {
        "step": 13
      },
      "paddingInner": 0,
      "paddingOuter": 0
    },
    {
      "name": "y_hm1",
      "type": "band",
      "domain": {
        "fields": [
          {
            "data": "hm_data",
            "field": "Encoding"
          },
          {
            "data": "data_2",
            "field": "Encoding"
          }
        ],
        "sort": false
      },
      "range": {
        "step": 13
      },
      "paddingInner": 0,
      "paddingOuter": 0
    },
    {
      "name": "x_hm2",
      "type": "band",
      "domain": {
        "fields": [
          {
            "data": "hm_data",
            "field": "Encoding"
          },
          {
            "data": "data_2",
            "field": "Encoding"
          }
        ],
        "sort": false
      },
      "range": {
        "step": 13
      },
      "paddingInner": 0,
      "paddingOuter": 0
    },
    {
      "name": "y_hm2",
      "type": "band",
      "domain": {
        "fields": [
          {
            "data": "hm_data",
            "field": "Dataset"
          },
          {
            "data": "data_2",
            "field": "Dataset"
          }
        ],
        "sort": false
      },
      "range": {
        "step": 13
      },
      "paddingInner": 0,
      "paddingOuter": 0
    },
    {
      "name": "layer_0_color",
      "type": "linear",
      "domain": [
        0,
        1
      ],
      "range": [
        "#a6bddb",
        "#023858"
      ],
      "interpolate": "hcl",
      "zero": true
    },
    {
      "name": "layer_1_color",
      "type": "ordinal",
      "domain": [
        "NA"
      ],
      "range": [
        "#a6611a"
      ]
    }
  ],
  "axes": [
    {
      "scale": "y_hm1",
      "orient": "right",
      "grid": false,
      "zindex": 1,
      "offset": {{ axis_config.encoding.offset }}
    },
    {
      "scale": "y_hm2",
      "orient": "right",
      "grid": false,
      "labelBaseline": "middle",
      "zindex": 1,
      "position": {{ axis_config.dataset.position }},
      "offset": {{ axis_config.dataset.offset }}
    }
  ],
  "legends": [
    {
      "fill": "layer_0_color",
      "gradientLength": {
        "signal": "clamp(height, 64, 200)"
      },
      "symbolType": "square",
      "title": "F1",
      "offset": 10
    },
    {
      "title": "Value",
      "fill": "layer_1_color",
      "gradientLength": {
        "signal": "clamp(height, 64, 200)"
      },
      "symbolType": "square"
    }
  ],
  "config": {
    "style": {
      "cell": {
        "stroke": "transparent"
      }
    }
  }
}